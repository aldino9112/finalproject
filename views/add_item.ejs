<%- include('partials/header.ejs', { title: 'Add Item' }) %>

<% if (error) { %>
  <%- include('partials/error.ejs', { error }) %>
<% } %>

<div class="container">
  <div class="row">
    <a class="" href="/items">Show All Data</a>
  </div>
  <br/>
  <div class="row">
    <form action="/items/add" method="POST" class="form">
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-3">
          <input type="text" class="form-control" name="name" id="name" placeholder="Input name">
        </div>
      </div>
      <div class="form-group row">
        <label for="type" class="col-sm-2 col-form-label">Type</label>
        <div class="col-sm-3">
          <input type="text" class="form-control" name="type" id="type" placeholder="Input type">
        </div>
      </div>
      <div class="form-group row">
        <label for="price" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-3">
          <input type="text" class="form-control" name="price" id="price" placeholder="Input price">
        </div>
      </div>
      <div class="form-group row">
        <label for="color" class="col-sm-2 col-form-label">Color</label>
        <div class="col-sm-3">
          <input type="text" class="form-control" name="color" id="color" placeholder="Input color">
        </div>
      </div>
      </div>
      <div class="form-group row">
        <label for="availability" class="col-sm-2 col-form-label">Availability</label>
          <div class="col-sm-3">
            <input type="radio" id="availability" name="availability" value="true">
            <label for="true"> Available </label>
            <input type="radio" id="availability" name="availability" value="false">
            <label for="false"> Not Available </label>        
          </div>
      </div>
      <button class="btn btn-primary" type="submit">Add Student</button>
    </form>
  </div>
</div>


<%- include('partials/footer.ejs') %> 